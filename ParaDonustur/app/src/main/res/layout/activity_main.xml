<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" tools:layout_editor_absoluteY="25dp" android:background="@drawable/bb">

    <TextView
            android:text="Dönüşüm: "
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/textView"
            android:textAlignment="center"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@android:color/background_light"
            app:layout_constraintTop_toBottomOf="@+id/button" android:layout_marginBottom="23dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/textView2"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="27dp"
            android:layout_marginStart="27dp" android:layout_marginEnd="27dp" android:layout_marginRight="27dp"/>
    <Button
            android:text="Dönüştür"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            android:textStyle="bold"
            android:onClick="getRates"
            android:background="@android:color/transparent" android:textSize="20sp"
            android:textColor="@android:color/background_light"
            app:layout_constraintTop_toBottomOf="@+id/spinner" android:layout_marginBottom="41dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/textView"
            app:layout_constraintStart_toStartOf="parent"/>
    <Spinner
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:entries="@array/birimler"
            android:id="@+id/spinner"
            android:theme="@style/AlertDialog.AppCompat.Light"
            android:textAlignment="center"
            android:background="@android:color/transparent"
            app:layout_constraintTop_toBottomOf="@+id/adView" app:layout_constraintEnd_toStartOf="@+id/spinner2"
            android:layout_marginBottom="96dp" app:layout_constraintBottom_toTopOf="@+id/button"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="27dp"
            android:layout_marginStart="27dp" android:layout_marginEnd="76dp" android:layout_marginRight="76dp"/>
    <Spinner
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:entries="@array/birimler"
            android:id="@+id/spinner2"
            android:theme="@style/AlertDialog.AppCompat.Light"
            android:textAlignment="center"
            android:background="@android:color/transparent"
            app:layout_constraintBaseline_toBaselineOf="@+id/spinner" app:layout_constraintStart_toEndOf="@+id/spinner"
            android:layout_marginEnd="27dp" android:layout_marginRight="27dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="nokulsoft.com"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:textSize="16sp" android:textColor="@android:color/white" android:autoLink="web"
            android:clickable="true"
            android:textStyle="bold"
            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginBottom="15dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <com.google.android.gms.ads.AdView
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            ads:adSize="BANNER"
            ads:adUnitId="ca-app-pub-7241074395795386/5654743710"
            android:layout_marginBottom="159dp" ads:layout_constraintEnd_toEndOf="parent"
            ads:layout_constraintBottom_toTopOf="@+id/spinner" ads:layout_constraintTop_toTopOf="parent"
            ads:layout_constraintStart_toStartOf="parent">
    </com.google.android.gms.ads.AdView>


</android.support.constraint.ConstraintLayout>